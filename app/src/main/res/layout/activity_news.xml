<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tf.NewsDemo.activity.NewsActivity">

    <com.tf.NewsDemo.view.NewsTitle
        android:id="@+id/newsTitle_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.tf.NewsDemo.view.NewsTitle>


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/newsTitle_activity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <FrameLayout
                android:id="@+id/frameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="240dp">

                    <ImageView
                        android:id="@+id/imageView_newsDetial_newsPic"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"/>

                    <TextView
                        android:id="@+id/textView_newsDetial_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/textView_newsDetial_picAuthor"
                        android:layout_margin="5dp"
                        android:text="标题"
                        android:textColor="@color/colorWhite"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/textView_newsDetial_picAuthor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="8dp"
                        android:gravity="right"
                        android:orientation="horizontal"
                        android:text="图片提供方" />
                </RelativeLayout>

            </FrameLayout>


            <WebView
                android:layout_below="@+id/frameLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/webView"></WebView>
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>
